{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "baseBranches": ["main", "landingpage"],
  "rangeStrategy": "bump",
  "ignorePaths": [".github/**"],
  "bumpVersion": "patch",
  "vulnerabilityAlerts": {
      "enabled": false
  },
  "packageRules": [
      {
          "packagePatterns": ["*"],
          "excludePackagePatterns": [
              "tsafe",
              "evt"
          ],
          "enabled": false
      },
      {
          "packagePatterns": [
              "tsafe",
              "evt"
          ],
          "matchUpdateTypes": ["minor", "patch"],
          "automerge": true,
          "automergeType": "branch",
          "branchName": "renovate_garronej_dependencies_update"
      }
  ]
}
