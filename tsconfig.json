{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es5",
        "lib": ["es2015", "DOM", "ES2019.Object"],
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "incremental": true,
        "strict": true,
        "downlevelIteration": true,
        "jsx": "react-jsx",
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src",
    ],
    "exclude": [
        "src/test/spa",
        "src/test/ssr"
    ]
}